<h1>New Task</h1>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit %>
<% end %>
  <%=link_to "Back to list", tasks_path%>

